---
title: Lyric Book
layout: layout.njk
---

<section class="card" style="display:flex;justify-content:space-between;align-items:center;gap:1rem;flex-wrap:wrap">
	<div>
		<strong>Songcraft Workspace</strong>
	</div>
	<div style="flex:1 1 100%;height:1px;background:#ffffff13;margin-top:.5rem"></div>
	<div style="display:flex;gap:.5rem;align-items:center;flex-wrap:wrap">
		<label>Song title <input id="songTitle" type="text" placeholder="Untitled" style="appearance:none;border:1px solid rgba(255,255,255,.25);background:rgba(255,255,255,.05);color:#fff;padding:.4rem .5rem;border-radius:8px"/></label>
		<label>Key
			<select id="songKey" style="appearance:none;border:1px solid rgba(255,255,255,.25);background:rgba(255,255,255,.05);color:#fff;padding:.45rem .5rem;border-radius:8px">
				<option>C</option><option>G</option><option>D</option><option>A</option><option>E</option><option>B</option><option>F#</option><option>Db</option><option>Ab</option><option>Eb</option><option>Bb</option><option>F</option>
			</select>
		</label>
		<label>BPM <input id="songBpm" type="number" min="40" max="220" value="90" style="width:5rem;appearance:none;border:1px solid rgba(255,255,255,.25);background:rgba(255,255,255,.05);color:#fff;padding:.4rem .5rem;border-radius:8px"/></label>
		<div>
			<button class="btn btn-small" id="btnTransposeDown">â€“ semitone</button>
			<button class="btn btn-small" id="btnTransposeUp">+ semitone</button>
		</div>
		<div>
			<button class="btn btn-small" id="btnNew">New</button>
			<button class="btn btn-small" id="btnSaveVersion" style="background:#444;">Save version</button>
			<button class="btn btn-small" id="btnExport">Export</button>
			<label class="btn btn-small" style="cursor:pointer;background:#2a2a4a;">Import <input id="importFile" type="file" accept=".chordpro,.cho,.txt" style="display:none"/></label>
		</div>
	</div>
</section>

<section class="songwriter" style="display:grid;grid-template-columns:minmax(300px,1fr) minmax(260px,380px);gap:1rem;align-items:start">
	<div class="pane">
	<h3 style="margin:.2rem 0 .6rem">Keyboard</h3>
	<div id="piano" class="piano"></div>
	<h3 style="margin:1rem 0 .6rem">Lyric editor</h3>
	<textarea id="editor" class="lyric-input" spellcheck="false" style="width:100%;min-height:30vh;font: 15px/1.5 ui-monospace,SFMono-Regular,Consolas,Menlo,monospace;appearance:none;border:1px solid #d9d4f0;background:#f7f5ff;color:#1a1535;border-radius:12px;padding:.8rem"></textarea>
		<details style="margin-top:.6rem">
			<summary>Recording mini-panel</summary>
			<div id="recPanel" style="display:flex;gap:.5rem;align-items:center;margin-top:.5rem;flex-wrap:wrap">
				<button class="btn btn-small" id="btnRec">Record</button>
				<button class="btn btn-small" id="btnStop" style="background:#444;display:none">Stop</button>
				<span id="recTimer" style="opacity:.85;min-width:6ch;text-align:center">00:00</span>
				<audio id="recAudio" controls style="display:none"></audio>
				<button class="btn btn-small" id="btnUpload" style="display:none">Save to song</button>
			</div>
			<div style="margin-top:.5rem">
				<strong>Takes</strong>
				<ul id="audioList" style="margin-top:.35rem;list-style:none;padding:0;display:grid;gap:.35rem"></ul>
			</div>
		</details>
	</div>
	<div class="pane chord-pane">
		<h3 style="margin:.2rem 0 .6rem">Structure</h3>
		<div class="structure" style="display:grid;gap:.6rem">
			<div style="display:flex;gap:.6rem;flex-wrap:wrap;align-items:center">
				<label>Time sig
					<select id="timeBeats" style="appearance:none;border:1px solid rgba(255,255,255,.25);background:rgba(255,255,255,.05);color:#fff;padding:.45rem .5rem;border-radius:8px">
						<option value="4" selected>4/4</option>
						<option value="3">3/4</option>
						<option value="6">6/8</option>
					</select>
				</label>
				<label>Bars/line
					<select id="barsPerLine" style="appearance:none;border:1px solid rgba(255,255,255,.25);background:rgba(255,255,255,.05);color:#fff;padding:.45rem .5rem;border-radius:8px">
						<option value="2">2</option>
						<option value="4" selected>4</option>
						<option value="8">8</option>
						<option value="12">12</option>
					</select>
				</label>
				<label style="display:flex;gap:.4rem;align-items:center"><input type="checkbox" id="metronome"/> Metronome</label>
				<label>Layout
					<select id="chartLayout" style="appearance:none;border:1px solid rgba(255,255,255,.25);background:rgba(255,255,255,.05);color:#fff;padding:.45rem .5rem;border-radius:8px">
						<option value="comfy" selected>Comfortable</option>
						<option value="compact">Compact</option>
						<option value="large">Large</option>
					</select>
				</label>
				<button class="btn btn-small" id="btnInsertBar">Insert bar |</button>
				<button class="btn btn-small" id="btnAdd4Bars" style="background:#2a2a4a">Add 4 empty bars</button>
				<button class="btn btn-small" id="btnPrintChart" style="background:#444">Print chart</button>
			</div>
			<div id="barPreview" class="bar-grid"></div>
		</div>
		<hr style="border:none;height:1px;background:#ffffff1a;margin:1rem 0"/>
		<h3 style="margin:.2rem 0 .6rem">Chord palette</h3>
		<div id="palette" class="palette-grid" style="display:grid;grid-template-columns:repeat(auto-fill,minmax(84px,1fr));gap:.5rem"></div>
		<h4 style="margin-top:1rem">Sevenths</h4>
		<div id="palette7" class="palette-grid" style="display:grid;grid-template-columns:repeat(auto-fill,minmax(84px,1fr));gap:.5rem"></div>
		<details style="margin-top:.6rem">
			<summary>Borrowed + secondary</summary>
			<div id="borrowed" class="palette-grid" style="display:grid;grid-template-columns:repeat(auto-fill,minmax(84px,1fr));gap:.5rem;margin-top:.5rem"></div>
		</details>
		<div style="margin-top:1rem">
			<button class="btn btn-small" id="btnAudition">Play chord</button>
			<button class="btn btn-small" id="btnPlaySong" style="background:#2a2a4a">Play song</button>
			<button class="btn btn-small" id="btnStopSong" style="background:#444">Stop</button>
		</div>
		<hr style="border:none;height:1px;background:#ffffff1a;margin:1rem 0"/>
		<h4 style="margin:.2rem 0 .6rem">Recent songs</h4>
		<ul id="recentSongs" style="list-style:none;padding:0;margin:0;display:grid;gap:.35rem"></ul>
	</div>
</section>

<script type="module" src="/assets/js/songwriter.js"></script>
